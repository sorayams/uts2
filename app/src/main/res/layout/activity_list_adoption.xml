<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ListAdoption">

    <ImageView
            android:layout_width="323dp"
            android:layout_height="36dp" app:srcCompat="@drawable/logo2_02" android:id="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="334dp"
            android:layout_height="582dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            android:background="@drawable/layout"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" android:layout_marginTop="20dp"
            android:backgroundTint="#00FFFFFF">

        <TwoLineListItem android:layout_width="fill_parent"
                         android:layout_height="wrap_content" android:mode="twoLine" android:id="@+id/listId"
                         app:layout_constraintBottom_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                         app:layout_constraintEnd_toEndOf="parent">
        </TwoLineListItem>
        <TextView android:textAppearance="?android:attr/textAppearanceLarge"
                  android:id="@+id/txt1" android:layout_width="302dp"
                  android:layout_height="30dp"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                  android:layout_marginTop="16dp" app:layout_constraintHorizontal_bias="0.531"
        />
        <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="302dp"
                android:layout_height="20dp" android:id="@+id/txt2"
                app:layout_constraintTop_toTopOf="@+id/txt1"
                android:layout_marginTop="29dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>